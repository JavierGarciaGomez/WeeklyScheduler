<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="rootPane" alignment="center" hgap="20.0" vgap="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.JGG.WeeklyScheduler.controller.AddAppointmentController">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label text="Veterinarian" />
    <Label text="Branch*" GridPane.rowIndex="1" />
    <Label text="Client name" GridPane.rowIndex="2" />
    <TextField fx:id="txtClient" onKeyReleased="#generateUserName" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Pet Name*" GridPane.rowIndex="3" />
    <TextField fx:id="txtPet" onKeyReleased="#generateUserName" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Service*" GridPane.rowIndex="4" />
    <TextField fx:id="txtService" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label text="Motive" GridPane.rowIndex="5" />
    <TextArea fx:id="txtMotive" prefHeight="60" prefWidth="60" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label text="Date*" GridPane.rowIndex="6" />
    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <Label text="Time*" GridPane.rowIndex="7" />
    <HBox fillHeight="true" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Spinner fx:id="spinHour" editable="true" initialValue="09" max="20" min="0" prefWidth="60" />
        <Spinner fx:id="spinMin" editable="true" initialValue="00" max="60" min="0" prefWidth="60" />
    </HBox>
    <ButtonBar GridPane.columnSpan="2" GridPane.rowIndex="8">
        <buttons>
         <Button fx:id="btnRegister1" mnemonicParsing="false" onAction="#delete" text="Delete" />
            <Button fx:id="btnRegister" mnemonicParsing="false" onAction="#register" text="Register" />
            <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#exit" text="Cancel" />
        </buttons>
    </ButtonBar>
   <ComboBox fx:id="cboVet" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="150.0" GridPane.columnIndex="1" />
   <ComboBox fx:id="cboBranch" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
