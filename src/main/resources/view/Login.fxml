<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="20.0" vgap="20.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.JGG.AttendanceControl.controller.LoginController">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label text="User">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <Label text="Password" GridPane.rowIndex="1">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <TextField fx:id="txtUser" text="JGG" GridPane.columnIndex="1">
        <font>
            <Font size="18.0"/>
        </font>
    </TextField>
    <PasswordField fx:id="txtPass" text="secret" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <font>
            <Font size="18.0"/>
        </font>
    </PasswordField>
    <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
      <buttons>
          <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#login" text="Login"/>
          <Button fx:id="btnCancel" mnemonicParsing="false" text="Cancel"/>
      </buttons>
    </ButtonBar>
</GridPane>
