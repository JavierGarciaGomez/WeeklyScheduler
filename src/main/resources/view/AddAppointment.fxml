<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="rootPane" alignment="center" hgap="20.0" vgap="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.JGG.WeeklyScheduler.controller.AddAppointmentController">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints />
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label text="Veterinarian">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="txtVet" onKeyPressed="#validateNumbers" GridPane.columnIndex="1">
        <font>
            <Font size="18.0" />
        </font>
    </TextField>
   <Label text="Branch" GridPane.rowIndex="1">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <TextField fx:id="txtBranch" onKeyPressed="#validateNumbers" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <font>
         <Font size="18.0" />
      </font>
   </TextField>
    <Label text="Client name" GridPane.rowIndex="2">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="txtClient" onKeyReleased="#generateUserName" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <font>
          <Font size="18.0" />
        </font>
    </TextField>
    <Label text="Pet Name" GridPane.rowIndex="3">
        <font>
          <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="txtPet" onKeyReleased="#generateUserName" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <font>
          <Font size="18.0" />
        </font>
    </TextField>
    <Label text="Service" GridPane.rowIndex="4">
        <font>
          <Font size="18.0" />
        </font>
    </Label>
    <TextField fx:id="txtService" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <font>
          <Font size="18.0" />
        </font>
    </TextField>
   <TextField fx:id="txtMotive" GridPane.columnIndex="1" GridPane.rowIndex="5">
      <font>
         <Font size="18.0" />
      </font>
   </TextField>
    <Label text="Motive" GridPane.rowIndex="5">
        <font>
          <Font size="18.0" />
        </font>
    </Label>
   <Label text="Date" GridPane.rowIndex="6">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="6" />
   <Label text="Time" GridPane.rowIndex="7">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
    <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Spinner fx:id="spinHour" editable="true" initialValue="09" max="20" min="0"/>
        <Spinner fx:id="spinMin" editable="true" initialValue="00" max="60" min="0"/>
    </HBox>
    <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="8">
      <buttons>
          <Button fx:id="btnRegister" mnemonicParsing="false" text="Register" onAction="#register"/>
          <Button fx:id="btnCancel" mnemonicParsing="false" text="Cancel" onAction="#cancel"/>
      </buttons>
    </ButtonBar>
</GridPane>
