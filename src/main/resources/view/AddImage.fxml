<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="240.0" prefWidth="180.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.JGG.AttendanceControl.controller.AddImageController">
   <ImageView fx:id="imvImage" fitHeight="120.0" fitWidth="100.0" layoutX="40.0" layoutY="60.0"
              onDragDropped="#handleOnDragDropped" onDragOver="#handleDragOver" pickOnBounds="true"
              preserveRatio="true"/>
   <Button fx:id="btnSave" layoutX="70.0" layoutY="192.0" mnemonicParsing="false" onAction="#save" text="Save"/>
   <Label layoutX="21.0" layoutY="25.0" text="Drag and drop the picture"/>
</AnchorPane>
